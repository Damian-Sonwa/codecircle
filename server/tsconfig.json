{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["jest.config.ts"],
  "exclude": ["node_modules", "dist", "**/*.js", "**/*.test.ts", "**/*.spec.ts"]
}

